{
  "particles": {
    "number": {
      "value": 0
    },
    "stroke": {
      "color": {
        "value": "#ff0000",
        "animation": {
          "enable": true,
          "speed": 5000,
          "sync": true
        }
      },
      "width": 1
    },
    "shape": {
      "type": ["circle", "square", "triangle", "polygon"],
      "options": {
        "circle": {
          "fill": false
        },
        "square": {
          "fill": false
        },
        "triangle": {
          "fill": false
        },
        "polygon": [
          {
            "sides": 5,
            "fill": false
          },
          {
            "sides": 6,
            "fill": false
          }
        ]
      }
    },
    "opacity": {
      "value": 1
    },
    "rotate": {
      "value": {
        "min": 0,
        "max": 360
      },
      "direction": "random",
      "animation": {
        "enable": true,
        "sync": true,
        "speed": {
          "min": 15,
          "max": 30
        }
      }
    },
    "size": {
      "value": {
        "min": 1,
        "max": 20
      },
      "animation": {
        "enable": true,
        "speed": {
          "min": 10,
          "max": 80
        },
        "sync": true,
        "startValue": "max",
        "destroy": "min"
      }
    },
    "move": {
      "enable": true,
      "speed": {
        "min": 2,
        "max": 10
      },
      "outModes": "destroy"
    }
  },
  "interactivity": {
    "events": {
      "onHover": {
        "enable": true,
        "mode": "trail"
      }
    },
    "modes": {
      "trail": {
        "delay": 0,
        "quantity": 5,
        "pauseOnStop": false
      }
    }
  },
  "background": {
    "color": "transparent"
  }
}
